{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "./",
    "lib": ["esnext"],
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "@util/*": ["utils/*"],
      "@route/*": ["routes/*"],
      "@service/*": ["services/*"],
      "@controller/*": ["controllers/*"],
      "@middleware/*": ["middlewares/*"]
    },
    "typeRoots": ["node_modules", "@types"],
    "types": ["jest", "node"],
    "allowJs": true,
    "checkJs": false,
    "outDir": "./dist",
    "removeComments": true,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUnusedParameters": false,
    "incremental": true,
  },
  "include": ["**/*.ts", "**/*.cjs", "*.cjs"],
  "exclude": ["node_modules"]
}