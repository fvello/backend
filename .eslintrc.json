{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": [
    "airbnb-base",
    "plugin:prettier/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "tsconfigRootDir": "./"
  },
  "plugins": [
    "prettier",
    "@typescript-eslint"
  ],
  "rules": {
    "semi": [
      "error",
      "never"
    ],
    "import/extensions": [
      "warn",
      {"ts": "never", "json": "always"}
    ],
    "quotes": [
      "error",
      "single"
    ],
    "no-undef": "off",
    "no-unused-vars": "off"
  },
  "settings": {
    "import/resolver": {
      "typescript": {}
    }
  }
}