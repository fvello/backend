{
  "name": "hyperos-api",
  "version": "0.0.1",
  "type": "module",
  "description": "Backend API for HyperOS",
  "main": "dist/server.js",
  "repository": "https://github.com/gethyperos/api",
  "author": "nodge <matheus.silva3@ftc.edu.br>",
  "license": "GPL-3.0",
  "private": false,
  "husky": {
    "pre-commit": "npm run lint && npm run prettier"
  },
  "scripts": {
    "build": "esbuild --bundle src/server.ts --outdir=dist --allow-overwrite --sourcemap --platform=node --minify --external:./node_modules/* --format=esm",
    "start": "npm run build && node dist/server.js",
    "start:watch": "nodemon dist/server.js",
    "build:watch": "esbuild --bundle src/server.ts --outdir=dist --allow-overwrite --sourcemap --platform=node --minify --external:./node_modules/* --format=esm --watch",
    "dev": "concurrently \"npm run build:watch\" \"npm run start:watch\"",
    "test": "jest --colors",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "prettier": "prettier --check 'src/**/*.ts'",
    "prettier:fix": "prettier --write 'src/**/*.ts'",
    "prepare": "esbuild --bundle src/prepare.ts --outdir=dist --allow-overwrite --sourcemap --platform=node --minify --external:./node_modules/* --format=esm && node ./dist/prepare.js && npx prisma db push && npm run build"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/dockerode": "^3.3.9",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.3",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^18.0.0",
    "@types/node-cache": "^4.2.5",
    "@types/signale": "^1.4.4",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^8.3.4",
    "@types/yamljs": "^0.2.31",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "eslint": "^7.32.0 || ^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.1.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.1.0",
    "husky": "^8.0.1",
    "jest": "^28.1.1",
    "nodemon": "^2.0.18",
    "prettier": "^2.7.1",
    "supertest": "^6.2.3",
    "ts-jest": "^28.0.5",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@prisma/client": "^4.0.0",
    "axios": "^0.27.2",
    "bcrypt": "^5.0.1",
    "concurrently": "^7.2.2",
    "cors": "^2.8.5",
    "dockerode": "^3.3.2",
    "dotenv": "^16.0.1",
    "esbuild": "^0.14.47",
    "express": "^4.18.1",
    "helmet": "^5.1.0",
    "internal-ip": "^7.0.0",
    "jsonwebtoken": "^8.5.1",
    "node-cache": "^5.1.2",
    "prisma": "^4.0.0",
    "signale": "^1.4.0",
    "swagger-ui-express": "^4.4.0",
    "uuid": "^8.3.2",
    "yamljs": "^0.3.0"
  }
}
